<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/comment_profile_image"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/test_dp"
        app:civ_border_color="@color/gray"
        app:civ_border_width="0.2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1"
        android:layout_toRightOf="@+id/comment_profile_image"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emptiness Shawon"
                android:id="@+id/comment_username"
                android:layout_marginLeft="15dp"
                android:textColor="@color/light_black"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wow!! So beautiful place."
                android:textColor="@color/light_black"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/comment_username"
                android:id="@+id/comment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 d"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:id="@+id/comment_time_posted"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/comment"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>