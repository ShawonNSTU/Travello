<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchUserForTagToolBar"
                android:background="@drawable/white_gray_border_bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    >

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:id="@+id/user_search_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_location_search"
                        />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/save_check"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/ic_save_check"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/user_search_icon"
                        android:layout_toStartOf="@+id/save_check"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:textColor="@color/light_black"
                        android:id="@+id/user_input_search"
                        android:inputType="text"
                        android:maxLines="1"
                        android:hint="@string/search_for_a_user"
                        android:background="@null"
                        android:textColorHint="@color/edittext_hint_color"
                        />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

    </RelativeLayout>

</merge>